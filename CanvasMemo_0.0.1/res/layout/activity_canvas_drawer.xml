<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/drawer_layout"
	style="@style/Theme.Transparent"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical" >

	<com.example.canvasmemo.view.CanvasView
		android:id="@+id/left_draw"
		android:layout_width="match_parent"
		android:layout_height="match_parent" />

	<!-- The navigation drawer -->

	<LinearLayout
		android:id="@+id/left_drawer"
		android:layout_width="240dp"
		android:layout_height="match_parent"
		android:layout_gravity="start"
		android:background="#333"
		android:orientation="vertical" >

		<Button
			android:id="@+id/button_overlay"
			android:layout_width="match_parent"
			android:layout_height="48dp"
			android:text="Overalay" />

		<Button
			android:id="@+id/drawer_save"
			android:layout_width="match_parent"
			android:layout_height="48dp"
			android:text="Save" />

		<Button
			android:id="@+id/drawer_load"
			android:layout_width="match_parent"
			android:layout_height="48dp"
			android:text="Load" />

		<Button
			android:id="@+id/drawer_clear"
			android:layout_width="match_parent"
			android:layout_height="48dp"
			android:text="Clear" />

		<LinearLayout
			android:id="@+id/page_button_layout"
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:layout_gravity="start"
			android:background="#333"
			android:orientation="horizontal" >

			<Button
				android:id="@+id/drawer_page_previous"
				android:layout_width="80dp"
				android:layout_height="wrap_content"
				android:text="←" />

			<TextView
				android:id="@+id/drawer_page_index"
				android:layout_width="80dp"
				android:layout_height="wrap_content"
				android:text=""
				android:textAppearance="?android:attr/textAppearanceLarge" />

			<Button
				android:id="@+id/drawer_page_next"
				android:layout_width="80dp"
				android:layout_height="wrap_content"
				android:text="→" />
		</LinearLayout>

		<Button
			android:id="@+id/drawer_page_new"
			android:layout_width="match_parent"
			android:layout_height="48dp"
			android:text="New Page" />

		<Button
			android:id="@+id/drawer_page_delete"
			android:layout_width="match_parent"
			android:layout_height="48dp"
			android:text="Delete Page" />
	</LinearLayout>

</android.support.v4.widget.DrawerLayout>